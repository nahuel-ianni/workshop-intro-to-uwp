<tile>
  <visual branding="nameAndLogo">

    <binding template="TileMedium" hint-textStacking="center">
      <image src="Assets/Small320x180.jpg" placement="peek" hint-crop="circle"/>
      <text hint-style="base" hint-align="center">You're lucky</text>
      <text hint-style="captionSubtle" hint-align="center">I saved the paper</text>
    </binding>

    <binding template="TileWide">
      <group>
        <subgroup hint-weight="33">
          <image src="Assets/Small320x180.jpg" hint-crop="circle" />
        </subgroup>
        <subgroup hint-textStacking="center">
          <text hint-style="base" hint-align="center">You're lucky</text>
          <text hint-style="captionSubtle" hint-align="center">I saved the paper</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileLarge" hint-textStacking="center">
      <group>
        <subgroup hint-weight="1"/>
        <subgroup hint-weight="2">
          <image src="Assets/Small320x180.jpg" hint-crop="circle"/>
        </subgroup>
        <subgroup hint-weight="1"/>
      </group>

      <text hint-style="base" hint-align="center">You're lucky</text>
      <text hint-style="captionSubtle" hint-align="center">I saved the paper</text>
    </binding>
    
  </visual>
</tile>
